<link rel="stylesheet" href="/css/editable.css">
<script src="/js/custom/auto-search-script.js"></script>
<div class="row">
  <div class="col-lg-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <p class="card-description"> Create <%= data.project.project %>'s Issues</p>
        <form method="post" action="/issues/store" class="form-inline">
          <input type="hidden" name="project_id" value="<%= data.project._id%>">
          <input type="hidden" name="issue_id" value="<%= data._id%>">
          <div class="row">
            <div class="col-md-12 form-inline">
              <label class="sr-only" for="title">Title</label>
              <input type="text" class="form-control mb-2 mr-sm-2" id="title" placeholder="Title" name="title" value="<%= data.title %>" required>
      
              <label class="sr-only" for="description">Description</label>
              <input type="text" class="form-control mb-2 mr-sm-2" id="description" placeholder="Description" value="<%= data.description %>" name="description" required>
    
                
              <label class="sr-only" for="author">Author</label>
              <input type="text" class="form-control mb-2 mr-sm-2" id="author" value="<%= data.author %>" placeholder="author" name="author">
            </div>
            <div class="col-md-12 form-inline">
              <input type="hidden" name="labels" id="labelInputs" value="<%= labelsString %>">
             
                <div class="tag-area form-control padding-1">
                    <label for="tag-input" class="label sr-only" >Add Label</label>
                    <ul>
                            <% for (const [index, item] of data.labels.entries()) { %>
                                <li class="tag" > 
                                    <%= item.name %> 
                                    <span class="cross" data-index="<%= index %>"></span>
                                </li>
                            <% } %>
                        <input type="text" class="tag-input" id="tag-input" placeholder="Add labels"/>
                    </ul>
                </div>
                <div class="form-group">
                    <!-- <label for="status" class=" col-sm-3 col-form-label">Status</label> -->
                    <select class="form-control" id="status" name="status">
                        <option value="">Status</option>
                        <option value="true" <%= data.status ? 'selected' : '' %> >Open</option>
                        <option value="false" <%= !data.status ? 'selected' : '' %>>Closed</option>
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-gradient-primary mb-2">Update</button>
                </div>
               

            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>