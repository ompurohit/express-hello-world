<div class="card">
  <div class="card-body">
    <div class="card-title d-flex">
        <a href="/project/create" class="btn btn-block btn-lg btn-gradient-primary mt-4 ml-auto">+ Create project</a>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Author</th>
          <th>Projects name</th>
          <th>Description</th>
          <th>Status</th>
          <th>No. of Issues</th>
        </tr>
      </thead>
      <tbody>
        <% if(data.length) {%> <% for(let item of data) {%>
        <tr>
          <td class="py-1 author-avatar">
            <img src="/images/faces-clipart/pic-1.png" alt="image" />
            <%= item.author %>
          </td>
          <td>
            <%= item.project %> 
            <a href="/project/<%= item._id %>">
              <i class="mdi mdi-open-in-new"></i>
            </a>
          </td>
          <td><%= item.description %></td>
          <td><label class="badge badge-danger">Pending</label></td>
          <td><label class="badge badge-danger"><%= item.issueCount %></label></td>
        </tr>
        <% } %> <% }else{ %>
            <tr>
                <td colspan="5" align="center">no record found...</td>
            </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
